            const langSwitcher = document.getElementById('lang-switcher');

            function translatePage(lang) {
                document.querySelectorAll('[data-translate-key]').forEach(el => {
                    const key = el.dataset.translateKey;
                    if (translations[lang] && translations[lang][key]) {
                        el.innerHTML = translations[lang][key];
                    }
                });

                 // Translate attributes
                document.querySelectorAll('[data-translate-aria-label]').forEach(el => {
                    const key = el.dataset.translateAriaLabel;
                    if (translations[lang] && translations[lang][key]) {
                        el.setAttribute('aria-label', translations[lang][key]);
                    }
                });
                document.querySelectorAll('[data-translate-alt-key]').forEach(el => {
                    const key = el.dataset.translateAltKey;
                    if (translations[lang] && translations[lang][key]) {
                        el.setAttribute('alt', translations[lang][key]);
                    }
                });

                document.documentElement.lang = lang;
                updateShareButtons(lang);
            }

            langSwitcher.addEventListener('click', () => {
                if (currentLang === 'es') {
                    currentLang = 'en';
                    translatePage('en');
                    langSwitcher.textContent = 'EspaÃ±ol';
                } else {
                    currentLang = 'es';
                    translatePage('es');
                    langSwitcher.textContent = 'English';
                }
            });


            // --- Scroll to Top Button Logic ---
            const scrollToTopBtn = document.getElementById('scrollToTopBtn');
            window.onscroll = function() {
                if (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) {
                    scrollToTopBtn.style.display = "block";
                } else {
                    scrollToTopBtn.style.display = "none";
                }
            };
            scrollToTopBtn.addEventListener('click', function() {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });

            // --- Scroll Animation Logic ---
            const scrollObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                    }
                });
            }, { threshold: 0.1 });
            const elementsToAnimate = document.querySelectorAll('.fade-in-on-scroll');
            elementsToAnimate.forEach(el => scrollObserver.observe(el));
            
            // --- Active Nav Link Logic ---
            const sections = document.querySelectorAll('section[id]');
            const navLinks = document.querySelectorAll('nav a');
            const navObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        navLinks.forEach(link => {
                            link.classList.toggle('active', link.getAttribute('href').substring(1) === entry.target.id);
                        });
                    }
                });
            }, { rootMargin: '-50% 0px -50% 0px' });
            sections.forEach(section => navObserver.observe(section));

            // --- Salt Calculator Logic ---
            const calculateBtn = document.getElementById('calculate-salt-btn');
            const weightInput = document.getElementById('cabbage-weight');
            const resultDiv = document.getElementById('salt-result');

            calculateBtn.addEventListener('click', () => {
                const weight = parseFloat(weightInput.value);
                if (isNaN(weight) || weight <= 0) {
                    resultDiv.textContent = '';
                    return;
                }
                const minSalt = (weight * 0.015).toFixed(1);
                const maxSalt = (weight * 0.02).toFixed(1);
                const resultText = translations[currentLang].salt_result_text
                    .replace('{min}', minSalt)
                    .replace('{max}', maxSalt);
                resultDiv.textContent = resultText;
            });

             // --- Share Button Logic ---
            const shareSections = document.querySelectorAll('[data-share-section]');
            
            function updateShareButtons(lang) {
                const shareText = translations[lang].share_text;
                shareSections.forEach(container => {
                    const sectionId = container.dataset.shareSection;
                    const url = `${window.location.href.split('#')[0]}#receta-${sectionId}`;
                    const titleKey = `${sectionId}_title`;
                    // A mapping for section IDs to translation keys if they don't match perfectly
                    const titleKeyMap = {
                        'vegetables': 'veggies_title',
                        'sauerkraut': 'other_recipes_title'
                    };
                    const resolvedTitleKey = titleKeyMap[sectionId] || titleKey;
                    const title = translations[lang][resolvedTitleKey] ? translations[lang][resolvedTitleKey].replace(/<[^>]*>/g, '').trim() : "Receta ProbiÃ³tica";

                    const encodedUrl = encodeURIComponent(url);
                    const encodedTitle = encodeURIComponent(translations[lang].main_title + " - " + title);

                    container.innerHTML = `
                        <h4 class="font-semibold text-lg mb-4">${shareText}</h4>
                        <div class="flex justify-center items-center gap-4">
                            <a href="https://api.whatsapp.com/send?text=${encodedTitle}%20${encodedUrl}" target="_blank" class="text-gray-500 hover:text-green-500 transition-colors" aria-label="Share on WhatsApp">
                                <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.894 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.886-.001 2.269.655 4.512 1.924 6.341l-.225 1.419 1.425-.366zm6.184-5.432c-.349-.174-2.06-.99-2.379-1.103-.319-.112-.552-.174-.784.173-.232.348-.898 1.103-1.102 1.334s-.403.261-.752.087c-.349-.174-1.48- .547-2.82-1.743s-1.899-2.902-2.197-3.388c-.298-.486-.052-.734.122-.907.16-.16.349-.417.523-.62.174-.204.232-.348.348-.582s.058-.458-.029-.632c-.087-.174-.784-1.899-1.076-2.604-.292-.704-.584-.607-.784-.618h-.485c-.232 0-.622.058-1.002.581s-1.282 1.258-1.282 3.021c0 1.762 1.31 3.501 1.484 3.733s2.553 3.886 6.207 5.472c.482.204.863.326 1.159.417.472.146.924.128 1.282.087.396-.043 1.258-.512 1.424-1.001.166-.487.166-.907.112-1.002s-.174-.174-.348-.348z"/></svg>
                            </a>
                            <a href="https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}" target="_blank" class="text-gray-500 hover:text-sky-500 transition-colors" aria-label="Share on X">
                               <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                            </a>
                            <a href="https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}" target="_blank" class="text-gray-500 hover:text-blue-600 transition-colors" aria-label="Share on Facebook">
                               <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.04c-5.5 0-10 4.49-10 10.02 0 5 3.66 9.15 8.44 9.9v-7.02H7.97v-2.89H10.4v-2.07c0-2.42 1.42-3.76 3.65-3.76.99 0 1.99.18 1.99.18v2.54h-1.3c-1.18 0-1.55.74-1.55 1.48v1.78h2.81l-.45 2.89h-2.36v7.02c4.78-.75 8.44-4.9 8.44-9.9C22 6.53 17.5 2.04 12 2.04z"/></svg>
                            </a>
                        </div>`;
                });
            }

            updateShareButtons(currentLang);
            translatePage(currentLang); // Initial translation
        });

        // --- Print Recipe Function ---
        function printRecipe(cardId) {
            const cardToPrint = document.getElementById(cardId);
            if (cardToPrint) {
                const printContainer = document.createElement('div');
                printContainer.classList.add('print-section');
                
                let titleHTML = '';
                const sectionTitleElement = cardToPrint.closest('section').querySelector('.section-title');
                if (sectionTitleElement) {
                     titleHTML = `<h2 style="font-size: 24px; font-weight: bold; margin-bottom: 20px; text-align: center;">${sectionTitleElement.innerHTML}</h2>`;
                } else { // Fallback for cards in the same section but different structure
                    const h3Title = cardToPrint.querySelector('h3');
                    if(h3Title) titleHTML = `<h2 style="font-size: 24px; font-weight: bold; margin-bottom: 20px; text-align: center;">${h3Title.innerHTML}</h2>`;
                }
                
                printContainer.innerHTML = titleHTML + cardToPrint.innerHTML;

                const buttonInClone = printContainer.querySelector('.print-btn');
                if(buttonInClone) buttonInClone.remove();
                
                document.body.appendChild(printContainer);
                window.print();
                document.body.removeChild(printContainer);
            }
        }
    </script>
</body>
</html>

