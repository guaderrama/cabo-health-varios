                { name: '2 eggs', protein: 13, emoji: 'üç≥' },
                { name: 'Salmon (120g)', protein: 25, emoji: 'üç£' },
                { name: 'Greek yogurt (1 cup)', protein: 18, emoji: 'üç¶' },
                { name: 'Lean meat (150g)', protein: 38, emoji: 'ü•©' },
                { name: 'Cooked lentils (1 cup)', protein: 18, emoji: 'üç≤' },
                { name: 'Cooked chickpeas (1 cup)', protein: 15, emoji: 'ü•£' },
                { name: 'Protein powder (1 scoop)', protein: 25, emoji: 'ü•§' },
                { name: 'Cooked shrimp (100g)', protein: 24, emoji: 'ü¶ê' }
            ]
        };

        let totalProteina = 0;
        let metaProteina = 0;
        let currentLang = 'es';

        // DOM Elements
        const langToggle = document.getElementById('lang-toggle');
        const langToggleMobile = document.getElementById('lang-toggle-mobile');
        const foodListContainer = document.getElementById('food-list-container');
        const totalProteinaDisplay = document.getElementById('totalProteinaDisplay');
        const metaProteinaDisplay = document.getElementById('metaProteinaDisplay');
        const proteinaProgressBar = document.getElementById('proteinaProgressBar');
        const resetProteinaBtn = document.getElementById('resetProteina');
        const calcularBtn = document.getElementById('calcularProteina');
        const pesoMetaInput = document.getElementById('pesoMeta');
        const resultadoP = document.getElementById('resultadoProteina');

        // Translation function
        const setLanguage = (lang) => {
            currentLang = lang;
            document.documentElement.lang = lang;
            
            document.querySelectorAll('[data-key]').forEach(element => {
                const key = element.dataset.key;
                if (translations[lang][key]) {
                    if (element.tagName === 'INPUT' && element.placeholder) {
                        element.placeholder = translations[lang][key];
                    } else {
                         element.innerHTML = translations[lang][key];
                    }
                }
            });
            
            // Update mobile menu links separately if needed, though data-key should handle it.
            document.querySelectorAll('#mobile-menu [data-key]').forEach(el => {
                const key = el.dataset.key.replace('-mobile','');
                 if (translations[lang][key]) {
                    el.textContent = translations[lang][key];
                }
            });

            langToggle.textContent = lang === 'es' ? 'English' : 'Espa√±ol';
            langToggleMobile.textContent = lang === 'es' ? 'English' : 'Espa√±ol';

            localStorage.setItem('language', lang);
            renderFoodList(lang);
            updateTrackerDisplay();
        };

        // Function to update tracker display
        function updateTrackerDisplay() {
            totalProteinaDisplay.textContent = `${totalProteina.toFixed(0)}g`;
            metaProteinaDisplay.textContent = `${metaProteina.toFixed(0)}g`;
            
            let percentage = 0;
            if (metaProteina > 0) {
                percentage = (totalProteina / metaProteina) * 100;
            }
            proteinaProgressBar.style.width = `${Math.min(percentage, 100)}%`;
        }
        
        // Function to render food list
        function renderFoodList(lang) {
            foodListContainer.innerHTML = '';
            proteinSources[lang].forEach(source => {
                const foodItem = document.createElement('div');
                foodItem.className = 'flex justify-between items-center bg-gray-50 p-3 rounded-lg';
                const proteinLabel = translations[lang]['protein-source-label'].replace('{protein}', source.protein);
                foodItem.innerHTML = `
                    <div class="flex items-center">
                        <span class="text-2xl mr-3">${source.emoji}</span>
                        <div>
                            <p class="font-semibold">${source.name}</p>
                            <p class="text-sm text-gray-500">${proteinLabel}</p>
                        </div>
                    </div>
                    <button class="add-protein-btn bg-teal-100 text-teal-700 font-bold w-8 h-8 rounded-full hover:bg-teal-200 transition" data-protein="${source.protein}">+</button>
                `;
                foodListContainer.appendChild(foodItem);
            });
            
            // Add event listeners to new buttons
            document.querySelectorAll('.add-protein-btn').forEach(button => {
                button.addEventListener('click', () => {
                    const amount = parseFloat(button.dataset.protein);
                    totalProteina += amount;
                    updateTrackerDisplay();
                });
            });
        }
        
        // Event Listeners
        calcularBtn.addEventListener('click', () => {
            const peso = parseFloat(pesoMetaInput.value);
            if (peso && peso > 0) {
                const minProteina = peso * 1;
                const maxProteina = (peso * 1.2);
                resultadoP.textContent = translations[currentLang]['protein-goal-text']
                    .replace('{min}', minProteina.toFixed(0))
                    .replace('{max}', maxProteina.toFixed(1));
                metaProteina = maxProteina;
                updateTrackerDisplay();
            } else {
                resultadoP.textContent = translations[currentLang]['protein-invalid-weight'];
                metaProteina = 0;
                updateTrackerDisplay();
            }
        });

        resetProteinaBtn.addEventListener('click', () => {
            totalProteina = 0;
            updateTrackerDisplay();
        });
        
        langToggle.addEventListener('click', () => {
            const newLang = currentLang === 'es' ? 'en' : 'es';
            setLanguage(newLang);
        });

        langToggleMobile.addEventListener('click', () => {
            const newLang = currentLang === 'es' ? 'en' : 'es';
            setLanguage(newLang);
        });

        // Initial Load
        const savedLang = localStorage.getItem('language') || 'es';
        setLanguage(savedLang);

        // Accordion functionality
        document.querySelectorAll('.accordion-header').forEach(header => {
            header.addEventListener('click', () => {
                const content = header.nextElementSibling;
                const icon = header.querySelector('svg');

                content.classList.toggle('open');
                icon.classList.toggle('rotate-180');

                document.querySelectorAll('.accordion-content').forEach(otherContent => {
                    if (otherContent !== content && otherContent.classList.contains('open')) {
                        otherContent.classList.remove('open');
                        otherContent.previousElementSibling.querySelector('svg').classList.remove('rotate-180');
                    }
                });
            });
        });

        // Mobile Menu Toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
        
        // Close mobile menu when a link is clicked
        mobileMenu.addEventListener('click', (e) => {
            if(e.target.tagName === 'A'){
                 mobileMenu.classList.add('hidden');
            }
        });

        // Scroll to Top Button
        const scrollToTopBtn = document.getElementById('scrollToTopBtn');
        window.onscroll = function() {
            if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
                scrollToTopBtn.classList.remove('hidden');
            } else {
                scrollToTopBtn.classList.add('hidden');
            }
        };
        scrollToTopBtn.addEventListener('click', function() {
            window.scrollTo({top: 0, behavior: 'smooth'});
        });

    });
    </script>

</body>
</html>

